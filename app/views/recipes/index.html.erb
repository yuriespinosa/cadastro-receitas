<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= pluralize(@recipes.size, "Receita", "Receitas") %>
      <font size="5"><small class="nova_receita"><%= link_to "Nova Receita", new_recipe_path %></small></font>
      </h1>
    </div>
  </div>

  <% @recipes.each do |recipe| %>
    <div class="row">
      <div class="col-md-2">
      <%= link_to imagem(recipe), recipe %>
    </div>

    <div class="col-md-7">
      <h3><%= link_to recipe.name, recipe %></h3>
      <p><%= truncate(recipe.stuff, length: 15, separator: ' ') %></p>
      <h4>Calorias:</h4>
      <p><%= formata_caloria(recipe) %></p>
      <h4>Tempo de Preparo:</h4>
      <p><%= recipe.duration.to_formatted_s(:time) %> min</p>
      <h4>Custo:</h4>
      <p><%= number_to_currency(recipe.cost) %></p>
    </div>
</div>
    
  <hr>

  <% end %>
