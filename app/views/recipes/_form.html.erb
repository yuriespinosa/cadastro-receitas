<%= form_for(@recipe) do  |f| %>

  <p class="form-group">
    <%= f.label :Nome %><br>
    <%= f.text_field :name, class:"form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :Ingredientes %><br>
    <%= f.text_area :stuff, cols: 20 , rows: 5, class:"form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :Tipo %><br>
    <%= f.text_field :kind, class:"form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :Calorias %><br>
    <%= f.number_field :calories, class:"form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :Modo_de_Preparo %><br>
    <%= f.text_area :prepare_mode, cols: 20 , rows: 5, class:"form-control" %>  
  </p>
  <p class="form-group">
    <%= f.label :Tempo_de_Preparo %><br>
    <%= f.time_select :duration, class:"form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :Porções %><br>
    <%= f.text_field :portion, class:"form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :Custo %><br>
    <%= f.number_field :cost, class:"form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :Poster %><br>
    <%= f.text_field :poster, placeholder: ".GIF,.JPEG, .PNG", class:"form-control" %>
  </p>
  <p>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', root_path, class: 'btn btn-dark' %>
  </p>

<% end %>
